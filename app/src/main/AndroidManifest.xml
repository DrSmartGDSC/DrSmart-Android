<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gdsc.drsmart">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrSmart"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.question.QuestionActivity"
            android:theme="@style/Theme.DrSmart.NoActionBar" />
        <activity
            android:name=".ui.doctor.activities.DoctorHomePage"
            android:exported="true" />
        <activity
            android:name=".ui.register.activities.RegistrationHomeActivity"
            android:exported="true"
            android:theme="@style/Theme.DrSmart.NoActionBar" />
        <activity
            android:name=".ui.home.activities.ResultActivity"
            android:exported="true" />
        <activity
            android:name="com.canhub.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".ui.home.activities.ScanActivity"
            android:exported="true" />
        <activity
            android:name=".ui.home.activities.LungActivity"
            android:exported="true" />
        <activity
            android:name=".ui.home.activities.SkinActivity"
            android:exported="true" />
        <activity
            android:name=".ui.register.activities.SignUpActivity"
            android:exported="true"
            android:theme="@style/Theme.DrSmart.NoActionBar" />
        <activity
            android:name=".ui.register.activities.SignInActivity"
            android:exported="true"
            android:theme="@style/Theme.DrSmart.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DrSmart.NoActionBar" />
        <activity
            android:name=".ui.register.activities.ChooseRegistrationActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DrSmart.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>